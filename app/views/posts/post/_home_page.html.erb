<div class="col-12 col-sm-6 col-md-3 mb-5">
  <div class="card">
    <div class="card-header">
      <%= truncate(post.title, :length => 60) %>
    </div>
    <div class="card-body">
      <h6 class="card-title mb-2 text-muted">Posted by <%= post.user.name %></h6>
      <p class="card-text"><%= post.content %></p>
      <p class="card-text"><small class="text-muted">Created at <%= post.created_at.strftime("%d/%m/%Y %H:%M:%S.%L") %> </small></p>
      <%= link_to "I'm interested", post_path(post.id), class: 'interested'  %>
    </div>
  </div>
</div>
